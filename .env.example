# ====================
# PIFSES Environment Variables
# Copy this file to .env.local and fill in your values
# ====================

# ====================
# FRONTEND
# ====================
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_ML_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# ====================
# BACKEND - API GATEWAY
# ====================
API_GATEWAY_PORT=8080
API_GATEWAY_ENV=development
JWT_SECRET=your-jwt-secret-key-here-change-in-production
JWT_EXPIRATION=86400

# ====================
# DATABASE - CASSANDRA
# ====================
CASSANDRA_HOSTS=cassandra:9042
CASSANDRA_KEYSPACE=pifses
CASSANDRA_USERNAME=cassandra
CASSANDRA_PASSWORD=cassandra

# ====================
# DATABASE - POSTGRES (Temporal)
# ====================
POSTGRES_HOST=postgres-temporal
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=temporal

# ====================
# CACHE - REDIS
# ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ====================
# MESSAGE QUEUE - KAFKA
# ====================
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC_ORDERS=orders
KAFKA_TOPIC_INVENTORY=inventory
KAFKA_TOPIC_FORECASTS=forecasts

# ====================
# ML PIPELINE
# ====================
ML_PIPELINE_PORT=8000
ML_API_URL=http://ml-pipeline:8000
MODEL_ARIMA_ENABLED=true
MODEL_LSTM_ENABLED=true
MODEL_ENSEMBLE_ENABLED=true
FORECAST_HORIZON=30

# ====================
# TEMPORAL WORKFLOW ORCHESTRATION
# ====================
TEMPORAL_SERVER_URL=temporal:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=pifses-queue

# ====================
# MONITORING - PROMETHEUS
# ====================
PROMETHEUS_URL=http://prometheus:9090
METRICS_ENABLED=true
METRICS_PORT=9090

# ====================
# MONITORING - GRAFANA
# ====================
GRAFANA_URL=http://grafana:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_DATASOURCE_PROMETHEUS=http://prometheus:9090

# ====================
# INTEGRATIONS - SHOPIFY
# ====================
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token
SHOPIFY_STORE_URL=your-store.myshopify.com

# ====================
# INTEGRATIONS - ETSY
# ====================
ETSY_API_KEY=your-etsy-api-key
ETSY_API_SECRET=your-etsy-api-secret
ETSY_ACCESS_TOKEN=your-etsy-access-token

# ====================
# INTEGRATIONS - AMAZON
# ====================
AMAZON_ACCESS_KEY_ID=your-amazon-access-key
AMAZON_SECRET_ACCESS_KEY=your-amazon-secret-key
AMAZON_SELLER_ID=your-amazon-seller-id
AMAZON_REGION=US

# ====================
# AWS DEPLOYMENT
# ====================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id
AWS_ECR_REGISTRY=your-account-id.dkr.ecr.us-east-1.amazonaws.com
AWS_ECS_CLUSTER=pifses-cluster
AWS_ECS_TASK_DEFINITION=pifses-task

# ====================
# SECURITY & LOGGING
# ====================
LOG_LEVEL=info
ENVIRONMENT=development
DEBUG=false
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ====================
# EMAIL NOTIFICATIONS (Optional)
# ====================
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@pifses.io

# ====================
# FEATURE FLAGS
# ====================
FEATURE_REAL_TIME_UPDATES=true
FEATURE_ANOMALY_DETECTION=true
FEATURE_AUTO_REORDER=true
FEATURE_MULTI_CHANNEL=true
